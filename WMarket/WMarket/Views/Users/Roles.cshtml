@model WMarket.ViewModels.UserView

@{
    ViewBag.Title = "Roles";
}

<h2>Roles para el usuario: @Model.Name</h2>

<p>
    @Html.ActionLink("Add Role", "AddRole", new { userID = Model.UserID }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-info" })
</p>

<table class="table">
   
    @for (int i=0; i < Model.Roles.Count; i++)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.Roles[i].RoleName)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new {userID = Model.UserID, roleId = Model.Roles[i].RoleID })
            </td>
        </tr>
    }

</table>